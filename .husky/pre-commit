#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run TypeScript check
echo "ğŸ“˜ Checking TypeScript..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript errors found. Please fix them before committing."
  exit 1
fi

# Run ESLint
echo "ğŸ“ Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint errors found. Please fix them before committing."
  exit 1
fi

# Run security tests if security files changed
if git diff --cached --name-only | grep -q "security\|csrf\|xss\|session"; then
  echo "ğŸ” Security files changed, running security tests..."
  npm run test:security:all
  if [ $? -ne 0 ]; then
    echo "âŒ Security tests failed. Please fix them before committing."
    exit 1
  fi
fi

echo "âœ… All pre-commit checks passed!"