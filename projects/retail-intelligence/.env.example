# Retail Intelligence Module Environment Variables

# Database (inherits from main app)
DATABASE_URL=postgresql://localhost/blipee_retail
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Redis (for real-time processing)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ViewSonic VS133 Integration
VIEWSONIC_USER=your-viewsonic-username
VIEWSONIC_PASSWORD=your-viewsonic-password
VIEWSONIC_DEVICES=192.168.200.24,192.168.200.27,192.168.200.29,192.168.200.31,192.168.200.25
SENSOR_POLLING_INTERVAL=300000 # 5 minutes

# Sales API Integration
SALES_API_URL=https://srs.grupoonly.pt
SALES_API_USER=your-sales-api-username
SALES_API_PASSWORD=your-sales-api-password

# Telegram Bot Integration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_API_KEY=generate-secure-api-key-for-bot

# POS Integrations (Future)
SHOPIFY_API_KEY=your-shopify-key
SHOPIFY_API_SECRET=your-shopify-secret
SHOPIFY_WEBHOOK_SECRET=your-webhook-secret

SQUARE_ACCESS_TOKEN=your-square-token
SQUARE_WEBHOOK_SIGNATURE_KEY=your-square-webhook-key

# AI Configuration (inherits from main app)
DEEPSEEK_API_KEY=your-deepseek-key
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key

# External Data Sources
WEATHER_API_KEY=your-weather-api-key
EVENTS_API_KEY=your-events-api-key

# Application Settings
NODE_ENV=development
RETAIL_APP_PORT=3001
RETAIL_API_BASE_URL=http://localhost:3001/api/retail

# Feature Flags
ENABLE_REAL_TIME_PROCESSING=true
ENABLE_ML_PREDICTIONS=true
ENABLE_CAPTURE_RATE=true
ENABLE_SMART_TARGETS=true

# Performance Settings
MAX_CONCURRENT_SENSOR_POLLS=10
BATCH_PROCESSING_SIZE=1000
CACHE_TTL_SECONDS=300

# Security
JWT_SECRET=your-jwt-secret
API_RATE_LIMIT_PER_MINUTE=100
NEXTAUTH_SECRET=your-nextauth-secret-generate-with-openssl

# SQLite Migration (for existing data)
SQLITE_DB_PATH=/path/to/existing/bot_database.db

# Monitoring
SENTRY_DSN=
LOG_LEVEL=debug