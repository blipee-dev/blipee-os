{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "outputDirectory": ".next",
  "regions": ["iad1", "dub1", "sin1"],
  "functions": {
    "src/app/api/ai/chat/route.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "src/app/api/monitoring/metrics/route.ts": {
      "maxDuration": 30,
      "memory": 512
    },
    "src/app/api/retail/v1/*/route.ts": {
      "maxDuration": 30,
      "memory": 512
    },
    "src/app/api/region/health/route.ts": {
      "maxDuration": 10,
      "memory": 256
    },
    "src/app/api/region/failover/route.ts": {
      "maxDuration": 30,
      "memory": 512
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=(), interest-cohort=()"
        },
        {
          "key": "X-Region-Enabled",
          "value": "true"
        },
        {
          "key": "X-Data-Residency-Compliant",
          "value": "true"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/cdn-cgi/trace",
      "destination": "/api/monitoring/trace"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_CACHE_TTL": "300",
    "NEXT_PUBLIC_MULTI_REGION_ENABLED": "true",
    "NEXT_PUBLIC_DATA_RESIDENCY_ENABLED": "true",
    "REGION_HEALTH_CHECK_INTERVAL": "30",
    "REGION_FAILOVER_THRESHOLD": "1000"
  }
}
