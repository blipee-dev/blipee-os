{
  "name": "blipee-v2",
  "version": "2.0.0",
  "description": "Blipee V2 - Enterprise sustainability platform with Server Components and native Supabase SSR auth",
  "private": true,
  "scripts": {
    "dev": "NEXT_IGNORE_INCORRECT_LOCKFILE=1 next dev --port 3005",
    "build": "NEXT_IGNORE_INCORRECT_LOCKFILE=1 next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next node_modules .turbo",
    "validate": "npm run type-check && npm run lint",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:auth": "playwright test tests/e2e/auth.spec.ts",
    "test:dashboard": "playwright test tests/e2e/dashboard.spec.ts",
    "test:public": "playwright test tests/e2e/public.spec.ts",
    "test:report": "playwright show-report",
    "test:install": "playwright install --with-deps",
    "types:generate": "supabase gen types typescript --project-id quovvwrwyfkzhgqdeham > src/types/supabase.ts",
    "types:generate:local": "supabase gen types typescript --local > src/types/supabase.ts"
  },
  "dependencies": {
    "@blipee/shared": "file:../../packages/shared",
    "@sentry/nextjs": "^10.22.0",
    "@supabase/ssr": "^0.6.0",
    "@supabase/supabase-js": "^2.48.0",
    "@tanstack/react-query": "^5.90.6",
    "@types/nodemailer": "^7.0.3",
    "@upstash/ratelimit": "^2.0.6",
    "@upstash/redis": "^1.35.6",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "isomorphic-dompurify": "^2.30.1",
    "lucide-react": "^0.552.0",
    "next": "14.2.18",
    "nodemailer": "^7.0.10",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.19.24",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.18",
    "postcss": "^8.4.45",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "sustainability",
    "carbon-tracking",
    "esg",
    "nextjs",
    "supabase",
    "server-components"
  ],
  "author": "Blipee",
  "license": "UNLICENSED"
}
