# Supabase Configuration
# IMPORTANT: Use the SAME values as V1 (shared backend)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# App Configuration
NEXT_PUBLIC_APP_URL=https://v2.blipee.com
NODE_ENV=development

# Development Settings
# Set to 'true' to disable rate limiting during development/testing
# IMPORTANT: Never enable this in production!
# DISABLE_RATE_LIMIT=true

# Vercel System Environment Variables
# These are automatically populated by Vercel - no need to set manually
VERCEL=
VERCEL_ENV=
VERCEL_URL=
NEXT_PUBLIC_VERCEL_URL=
VERCEL_GIT_PROVIDER=
VERCEL_GIT_REPO_OWNER=
VERCEL_GIT_REPO_SLUG=
VERCEL_GIT_COMMIT_REF=
VERCEL_GIT_COMMIT_SHA=

# Rate Limiting (Upstash Redis)
# REQUIRED for production to enable rate limiting
# Sign up at https://upstash.com and create a Redis database
# Without these, rate limiting will be disabled (development only)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# Email Configuration (Nodemailer)
# Required for newsletter, contact, and support form notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@blipee.com

# Error Tracking (Sentry)
# Sign up at https://sentry.io and create a new project
# The DSN is required for error tracking to work
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id

# Sentry Source Maps Upload (optional, production only)
# These are only needed if you want to upload source maps to Sentry
# Get these from your Sentry organization settings
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Enable Sentry in development (optional, default: false)
# SENTRY_ENABLED=true

# Optional: Vercel Analytics & Speed Insights
# These are automatically enabled when packages are installed
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Testing (Playwright E2E Tests)
# Create a dedicated test user in Supabase with these credentials
TEST_USER_EMAIL=test@blipee.com
TEST_USER_PASSWORD=TestPassword123!
PLAYWRIGHT_TEST_BASE_URL=http://localhost:3005
